<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/content_expression"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".controller.activities.ExpressionActivity"
              tools:showIn="@layout/fragment_expression"
              android:clipChildren="false"
              android:orientation="vertical">

    <!--xmlns:card_view="http://schemas.android.com/apk/res-auto" for using card_view:background-->
    <android.support.v7.widget.CardView
        android:id="@+id/fragment_drag_content_main_exp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:listSeparatorTextViewStyle"
                android:textSize="@dimen/card_title_size"
                android:text="@string/current_expression_title"
                android:textColor="@color/light_gray"/>

            <es.uam.eps.tfg.app.tfgapp.view.ExpressionView
                android:id="@+id/current_exp_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_drag_content_selected_exp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:listSeparatorTextViewStyle"
                android:textSize="@dimen/card_title_size"
                android:textColor="@color/light_gray"
                android:text="@string/button_exp_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical">

                <TableLayout
                    android:id="@+id/fragment_drag_content_button_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*"
                    android:gravity="center">

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/button_exp_change_side"
                            android:background="@drawable/button_exp_action"
                            android:src="@drawable/ic_exp_change_side"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/button_exp_change_side_desc"/>

                        <ImageButton
                            android:id="@+id/button_exp_move_right"
                            android:background="@drawable/button_exp_action"
                            android:src="@drawable/ic_exp_move_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/button_exp_move_right_desc"/>

                        <ImageButton
                            android:id="@+id/button_exp_move_left"
                            android:background="@drawable/button_exp_action"
                            android:src="@drawable/ic_exp_move_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/button_exp_move_left_desc"/>

                        <ImageButton
                            android:id="@+id/button_exp_delete"
                            android:background="@drawable/button_exp_action"
                            android:src="@drawable/ic_exp_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/button_exp_delete_desc"/>


                        <ImageButton
                            android:id="@+id/button_exp_associate"
                            android:background="@drawable/button_exp_action"
                            android:src="@drawable/ic_exp_associate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/button_exp_associate_desc"/>

                        <ImageButton
                            android:id="@+id/button_exp_disassociate"
                            android:background="@drawable/button_exp_action"
                            android:src="@drawable/ic_exp_disassociate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/button_exp_disassociate_desc"/>

                        <ImageButton
                            android:id="@+id/button_exp_operate"
                            android:background="@drawable/button_exp_action"
                            android:src="@drawable/ic_exp_operate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/button_exp_operate"/>


                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
